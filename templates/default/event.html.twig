{% extends 'base.html.twig' %}

{% block title %}
    {{ event.title }}
{% endblock %}

{% block body %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">
            {{ event.title }}
        </h1>
    </div>

    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <div class="row">
                <div class="col">
                    <img height="250" style="width: 100%; object-fit: cover" src="{{ event.image }}" class="card-img-top" alt="{{ event.title }}">
                </div>
                <div class="col">
                    <h4>A lieu le {{ event.eventDate|date('d/m/Y')  }}</h4>
                    <h5>Description : </h5>
                    {{ event.description }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


