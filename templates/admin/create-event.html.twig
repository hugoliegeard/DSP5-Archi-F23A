{% extends "base.html.twig" %}

{% block title %}Créer mon évènement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .vich-image img {
            max-width: 100%;
        }
    </style>
{% endblock %}

{% block body %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">Créer mon évènement</h1>
    </div>

    {# .container>.row>.col-7.mx-auto #}
    <div class="container">
        <div class="row">
            <div class="col-7 mx-auto">

                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form(form) }}
            </div>
        </div>
    </div>

{% endblock %}
