{% extends 'base.html.twig' %}

{% block body %}
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">Mes évènements</h1>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for event in events %}
                    <div class="col-sm-3 mt-4">
                        <div class="card">
                            <img src="{{ asset('images/events/' ~ event.image) }}" class="card-img-top"
                                 alt="{{ event.title }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ event.title }}</h5>
                                <p class="card-text">{{ event.description }}</p>
                                <div class="d-grid gap-2 mt-4">
                                    <a href="{{ path('event_update', {'id': event.id}) }}"
                                       class="btn btn-dark">
                                        Modifier
                                    </a>
                                    <a href="{{ path('event_delete', {'id': event.id}) }}"
                                       class="btn btn-dark">
                                        Supprimer
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-info">
                        Vous n'avez pas d'évènement pour le moment.
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Mes évènements
{% endblock %}

